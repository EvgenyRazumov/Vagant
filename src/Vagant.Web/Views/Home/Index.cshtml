@{
    ViewBag.Title = "Home Page";
}

@section Styles {
    @Styles.Render("~/bundles/css/Timeline")
    @Styles.Render("~/bundles/css/Home")
    
}

@section BodyScripts {
    <script type="text/javascript">
        var vagantAppParams = {};

        vagantAppParams.getEventsDataUrl = '@Url.Action("GetEvents", "Event")';
        vagantAppParams.gotoEventsDetailsUrl = '@Url.Action("Details", "Event")';
    </script>

    @Scripts.Render("~/bundles/Timeline")
    @Scripts.Render("~/bundles/Home")
}

<div class="page home-page">
    <div class="home-page__header clearfix">
        <!-- ko template: { name: 'timelineTemplate', data: timeline } -->
        <!-- /ko -->
    </div>
    <div class="home-page__body clearfix">
        <div class="col-xs-12 col-sm-12 col-md-9">
            <div data-bind="template: {name: 'eventManagerTemplate', data: gridManager }"></div>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-3">
            <div class="event-filters">

            </div>
            <div class="notifications">

            </div>
        </div>
    </div>
</div>

@Html.Partial("Home/_Timeline")
@Html.Partial("Event/EventManager")